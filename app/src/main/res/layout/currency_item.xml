<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.revolut.realtimerates.presentation.ui.mainscreen.CurrencyExchangeFragment" />

        <variable
            name="value"
            type="Float" />

        <variable
            name="model"
            type="com.revolut.realtimerates.domain.room.CurrencyItem" />

        <variable
            name="mainViewModel"
            type="com.revolut.realtimerates.presentation.ui.viewModels.CurrencyViewModel" />

        <import type="java.util.Map"/>
        <variable name="map" type="Map&lt;String, String&gt;"/>
    </data>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/selector"
        android:onClick="@{view -> handler.onCellClick(view, model)}"
        android:padding="18dp">

        <ImageView
            android:visibility="invisible"
            android:id="@+id/flag"
            android:layout_width="1dp"
            android:layout_height="58dp" />

        <TextView
            android:id="@+id/code"
            android:visibility="visible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/flag"
            android:paddingLeft="12dp"
            android:text="@{map[model.description]}"
            android:textColor="#000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/code"
            android:layout_alignLeft="@+id/code"
            android:layout_alignBottom="@+id/flag"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:paddingLeft="12dp"
            android:text="@{model.description}"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/valueEdittext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/flag"
            android:layout_alignBottom="@+id/flag"
            android:layout_alignParentRight="true"
            android:clickable="true"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:inputType="numberDecimal"
            android:onTouchListener="@{handler::onTouchListener}"
            android:textSize="26sp"
            app:mainViewModel="@{mainViewModel}"
            app:value="@{value}" />

    </RelativeLayout>
</layout>